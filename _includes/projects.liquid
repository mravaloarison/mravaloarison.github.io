<div class="col">
  <a
    href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}"
    class="project-link"
  >
    <div class="card h-100 project-card">
      {% if project.img %}
        {%
          include figure.liquid
          loading="eager"
          path=project.img
          sizes="250px"
          alt="project thumbnail"
          class="card-img-top"
        %}
      {% endif %}

      <div class="card-body">
        <h3 class="card-title">{{ project.title }}</h3>
        <p class="card-text">{{ project.description }}</p>

        {% if project.github %}
          <div class="project-links">
            <a
              href="{{ project.github }}"
              target="_blank"
              rel="noopener"
            >
              <i class="fa-brands fa-github"></i>
              Code
            </a>

            {% if project.github_stars %}
              <span class="project-stars">
                <i class="fa-solid fa-star"></i>
                <span id="{{ project.github_stars }}-stars"></span>
              </span>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </a>
</div>

<style>
  /* Project card â€” editorial alignment */

  .project-link {
    text-decoration: none;
    color: inherit;
  }

  .project-card {
    border: 1px solid var(--global-divider-color);
    border-radius: 0;
    box-shadow: none;
    transition: border-color 0.2s ease;
  }

  .project-card:hover {
    border-color: var(--global-theme-color);
  }

  .project-card .card-title {
    font-size: 1rem;
    font-weight: 500;
    margin-bottom: 0.25rem;
  }

  .project-card .card-text {
    font-size: 0.9rem;
    color: var(--global-text-color-light);
    line-height: 1.6;
    margin-bottom: 0.75rem;
  }

  .project-links {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.85rem;
    color: var(--global-text-color-light);
  }

  .project-links a {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    text-decoration: none;
    color: inherit;
  }

  .project-links a i {
    font-size: 1em;
    opacity: 0.8;
    position: relative;
    top: -0.05em;
  }

  .project-links a:hover {
    color: var(--global-theme-color);
  }

  .project-links a:hover i {
    opacity: 1;
  }

  .project-stars {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    opacity: 0.8;
  }

  .project-stars i {
    font-size: 0.9em;
  }
</style>
