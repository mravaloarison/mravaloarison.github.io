---
layout: default
---

<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {% if site.title == 'blank' %}
        <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
        {{ site.last_name }}
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>
    
    <p class="desc mb-2">{{ page.subtitle }}</p>

    <div class="row g-2 mb-3">
  {% for social in page.social_links %}
    <div class="col-6 col-sm-auto">
      <a
        href="{{ social.url }}{{ social.username }}"
        target="_blank"
        class="text-decoration-none"
        style="color: rgb(123, 123, 129);"
      >
        <i class="{{ social.icon }}"></i> {{ social.name }}
      </a>
    </div>
  {% endfor %}

  {% if page.cv_pdf %}
    <div class="col-6 col-sm-auto">
      <a
        {% if page.cv_pdf contains '://' %}
          href="{{ page.cv_pdf }}"
        {% else %}
          href="{{ page.cv_pdf | relative_url }}"
        {% endif %}
        target="_blank"
        rel="noopener noreferrer"
        class="text-decoration-none"
        style="color: rgb(123, 123, 129);"
      >
        <i class="fa-solid fa-file-pdf"></i> Download resume
      </a>
    </div>
  {% endif %}
</div>


  </header>

  <article>
    <div class="clearfix">
      {{ content }}
    </div>

    {% if page.latest_posts and page.latest_posts.enabled %}
      <h2>
        <a href="{{ '/blog/' | relative_url }}" style="color: inherit">
          Latest posts
        </a>
      </h2>
      {% include latest_posts.liquid %}
    {% endif %}
  </article>

</div>
