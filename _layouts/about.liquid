---
layout: default
---

<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {% if site.title == 'blank' %}
        <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
        {{ site.last_name }}
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>
    
    <p class="desc mb-2">{{ page.subtitle }}</p>

    <div class="d-flex text-muted mb-3">
      {% for social in page.social_links %}
        <a href="{{ social.url }}{{ social.username }}"
          target="_blank"
          class="text-decoration-none text-muted mr-3">
          <i class="{{ social.icon }}"></i> {{ social.name }}
        </a>
      {% endfor %}
    </div>

  </header>

  <article>
    <div class="clearfix">
      {{ content }}
    </div>

    {% if page.latest_posts and page.latest_posts.enabled %}
      <h2>
        <a href="{{ '/blog/' | relative_url }}" style="color: inherit">
          Latest posts
        </a>
      </h2>
      {% include latest_posts.liquid %}
    {% endif %}
  </article>

</div>
